@using WebKarbord.Controllers.Unit;@{ ViewBag.Title = "Index"; Layout = "~/Views/Shared/_LayoutNew.cshtml"; }


<div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div class="header">
                <h2><strong>لیست <b id="TitleListFactor"></b></strong></h2>
                <div class="row header-dropdown m-r--5">
                    <a id="refreshFDocH" class="">
